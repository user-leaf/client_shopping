<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shop.imake.activity.ZhiFuBaoAddActivity"
    android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="shop.imake.activity.WechatAddActivity"
        android:orientation="vertical">
        <shop.imake.widget.IUUTitleBar
            android:id="@+id/title_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iuuTitleBarTitle="绑定支付宝"
            app:iuuTitleBarLeftImage="@mipmap/nav_back_white"
            android:background="#eee">
        </shop.imake.widget.IUUTitleBar>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_logo_ailipay"
               />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="支付宝"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_zhifubao_id"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColorHint="@color/app_gray"
            android:padding="10dp"
            android:hint="输入支付宝账号"/>
        <EditText
            android:id="@+id/et_zhifubao_password"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textColorHint="@color/app_gray"
            android:padding="10dp"
            android:hint="请输入支付宝支付密码"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_choose_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置快捷为支付方式"/>
            <TextView
                android:layout_below="@+id/tv_choose_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注：付款时将默认使用该支付方式"
                android:textColor="@color/app_gray"/>
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sw_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/bt_zhifubao_bangding"
            android:layout_width="match_parent"
            android:text="立即绑定"
            android:gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
