<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sample1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        app:clickToClose="true">

    <LinearLayout
        android:tag="Bottom4"
        android:id="@+id/bottom_wrapper_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        >
        <!-- magnifier2  star2  trash2 -->

        <TextView
            android:id="@+id/tv_bangdingPayment_setingdefault"
            android:layout_width="wrap_content"
            android:background="@android:color/darker_gray"
            android:text="设为默认"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:focusable="false"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_bangdingPayment_delete"
            android:layout_width="wrap_content"
            android:background="@drawable/red"
            android:focusable="false"
            android:text="  删除  "
            android:gravity="center"
            android:textColor="@android:color/white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bankcard_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:descendantFocusability="blocksDescendants"
       >
        <ImageView
            android:id="@+id/iv_bankcard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_boc"/>

        <ImageView
            android:id="@+id/iv_bankcard_item_quickly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/list_icon_quicklypay"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_alignTop="@+id/iv_bankcard_item_quickly"
            android:text="所属银行"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bank_name"
            android:layout_alignLeft="@+id/tv_bank_name"
            android:text="卡类型"/>
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_card_name"
            android:layout_alignTop="@+id/tv_card_name"
            android:layout_marginLeft="20dp"
            android:text="卡号"/>

       </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
