<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/order_make_item_iv_pic"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/list_image_loading"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/order_make_item_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:text="X3"
        android:textSize="@dimen/text_size_tiny"
        />

    <TextView
        android:id="@+id/order_make_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_make_item_iv_pic"
        android:text="名称"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/order_make_item_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/order_make_item_tv_name"
        android:layout_below="@id/order_make_item_tv_name"
        android:layout_marginTop="5dp"
        android:text="描述"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/order_make_item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/order_make_item_iv_pic"
        android:text="价格"
        android:textColor="@color/app_red"
        android:layout_below="@id/order_make_item_tv_desc"
        />

    <TextView
        android:id="@+id/order_make_item_tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/order_make_item_tv_price"
        android:text="+积分"
        android:textColor="@color/app_dark_gray"
        android:textSize="@dimen/text_size_tiny"
        android:layout_alignBaseline="@id/order_make_item_tv_price"
        />

</RelativeLayout>