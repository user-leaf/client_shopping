<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="shop.imake.activity.MineMemberCenterIntegralPayActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <shop.imake.widget.IUUTitleBar
            android:id="@+id/title_member_center_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iuuTitleBarLeftImage="@mipmap/nav_back_white"
            app:iuuTitleBarTitle="我的积分"
            />
        <TextView
            android:id="@+id/tv_integral_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="详情"
            android:textSize="14sp"
            android:textColor="#fff"
            />

    </FrameLayout>

    <View
        style="@style/entry_divider_bold_line_style"
        android:layout_height="3.5dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_not_login"/>

        <include layout="@layout/layout_un_network"/>

        <ScrollView
            android:id="@+id/sl_integral_pay_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:text="积分余额"
                        android:textColor="#bbbbbb"
                        />

                    <TextView
                        android:id="@+id/tv_member_center_integral_haven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22.5dp"
                        android:text="0"
                        android:textColor="#dc9600"
                        android:textSize="32sp"
                        android:layout_marginBottom="20dp"
                        />
                </LinearLayout>

                <View
                    style="@style/entry_divider_bold_line_style"
                    android:layout_height="3.5dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/member_center_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="定额充值"/>
                </RelativeLayout>
                <View
                    style="@style/entry_divider_fine_line_style"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_integral_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="10积分\n=10元"
                            android:enabled="false"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="20积分\n=20元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="30积分\n=30元"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_integral_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="51积分\n=50元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="103积分\n=100元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="207积分\n=200元"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_integral_7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="311积分\n=300元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="519积分\n=500元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="1039积分\n=1000元"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_integral_10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="2079积分\n=2000元"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_11"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/selector_service_suggestion_tag_bg"
                            android:gravity="center"
                            android:textColor="@drawable/selector_service_suggestion_txt_color"
                            android:text="其它金额"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/tv_integral_12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/entry_divider_fine_line_style"
                    android:layout_height="3.5dp"
                    />

                <RelativeLayout
                    android:id="@+id/rl_et_money_member_center_integral"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone"
                    >
                    <!--android:enabled="false"-->
                    <EditText
                        android:id="@+id/et_money_member_center_integral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="start"
                        android:background="#ffffff"
                        android:hint="请输入整数充值金额"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_small"
                        />

                </RelativeLayout>

                <View
                    style="@style/entry_divider_fine_line_style"
                    />

                <Button
                    android:id="@+id/btn_pay_member_center_integral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/app_red"
                    android:text="充值"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>
