<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="shop.imake.activity.MyCommissionActivity">
    <!--标题-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <shop.imake.widget.IUUTitleBar
            android:id="@+id/title_commission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iuuTitleBarLeftImage="@mipmap/nav_back_white"
            app:iuuTitleBarTitle="我的佣金" />

        <TextView
            android:id="@+id/tv_into_commission_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="明细"
            android:textColor="#fff"
            android:textSize="17sp" />
    </FrameLayout>
    <!--内容-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:src="@mipmap/shengyuyongjin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="剩余佣金"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff5a27"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_commission_have_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff5a27"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commission_apply_withdraw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="申请提取"
        android:textColor="@drawable/selector_btn_textcolor"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15.5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返佣总额：¥"
            android:textColor="#222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_commission_withdraw_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#222"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
