<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
            android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/home_good_grid_item_iv_pic"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:src="@mipmap/list_image_loading"
        android:scaleType="centerInside"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/home_good_grid_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/home_good_grid_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0"
            android:textColor="@color/app_red"
            android:textSize="@dimen/text_size_tiny"
            android:layout_below="@id/home_good_grid_item_tv_title"
            />
        <TextView
            android:id="@+id/home_good_grid_item_tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0积分"
            android:textColor="@color/app_dark_gray"
            android:textSize="@dimen/text_size_tiny"
            android:layout_alignBaseline="@id/home_good_grid_item_tv_price"
            android:layout_toRightOf="@id/home_good_grid_item_tv_price"
            />



    </RelativeLayout>

</LinearLayout>