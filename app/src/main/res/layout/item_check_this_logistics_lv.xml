<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingRight="20dp" >
    <!--android:src="@drawable/timeline_green" 圆点图片 -->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical">
      <View
          android:id="@+id/view_check_the_logistics_line"
          android:layout_width="1dp"
          android:layout_height="40px"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:background="#A6A6A6" />
      <ImageView
          android:id="@+id/iv_check_the_logistics_circle"
          android:layout_width="12dp"
          android:layout_height="12dp"
          android:scaleType="fitCenter"
          android:background="@drawable/selector_check_the_logistics_circle"/>
      <View
          android:id="@+id/view_check_the_logistics_line1"
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:background="#A6A6A6" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px"
        android:layout_marginLeft="10px"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_check_this_logistic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:layout_marginBottom="20px"
            android:textColor="#666"
            />

        <TextView
            android:id="@+id/tv_check_this_logistic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="#666"
            android:layout_marginBottom="30px"
            />
        <View
            android:id="@+id/view_check_the_logistics_line2"
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#A6A6A6" />
    </LinearLayout>

</LinearLayout>