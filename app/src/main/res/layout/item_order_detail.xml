<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:minHeight="90dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/order_detail_item_iv_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/list_image_loading"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:id="@+id/order_detail_item_ll1"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/order_detail_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="¥00"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/order_detail_item_tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+00积分"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/order_detail_item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/order_detail_item_tv_price"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="X3"
            />

        <TextView
            android:id="@+id/order_detail_item_tv_after_sale"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_copy_button_bg_stroke_red"
            android:gravity="center"
            android:text="申请售后"
            android:textColor="@color/app_red"
            android:visibility="gone"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/order_detail_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/order_detail_item_ll1"
        android:layout_toRightOf="@id/order_detail_item_iv_pic"
        android:text="名称"
        android:textColor="@color/app_dark_gray"
        />

    <TextView
        android:id="@+id/order_detail_item_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/order_detail_item_tv_name"
        android:layout_alignRight="@id/order_detail_item_tv_name"
        android:layout_below="@id/order_detail_item_tv_name"
        android:layout_marginTop="5dp"
        android:text="描述"
        />

</RelativeLayout>