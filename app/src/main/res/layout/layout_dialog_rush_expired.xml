<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="25dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="您有商品已过抢购期"
        android:textColor="@color/app_red"
        android:textSize="17sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="价钱调整到原售价，是否继续购买？"
        android:textColor="@color/app_gray_6b6b6b"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/rush_expired_dialog_tv_pass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cart_dialog_btn_bg_white"
            android:gravity="center"
            android:text="仅不买它了"
            />

        <TextView
            android:id="@+id/rush_expired_dialog_tv_goon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_cart_dialog_btn_bg_red"
            android:gravity="center"
            android:text="继续购买"
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>