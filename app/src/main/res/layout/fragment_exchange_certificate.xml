<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="shop.imake.fragment.ExchangeCertificateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160.5dp"
                android:layout_height="56dp"
                android:layout_marginTop="31dp"
                android:src="@mipmap/icon_voucher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="未激活券额"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_not_active_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text=""
                android:textColor="@color/app_red"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_exchange_certificate_activate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_long_btn_bg"
                android:gravity="center"
                android:text="激活"
                android:textColor="#fff"
                android:textSize="20sp" />

            <View
                style="@style/exchange_divider_fine_line_style"
                android:layout_marginTop="45dp"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_can_use_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="可使用兑换券额"
                    android:textColor="#222"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_can_use_exchange_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_can_use_exchange"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_exchange_certificate_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:text="充值"
                    android:textColor="@color/app_red"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_exchange_certificate_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@+id/tv_exchange_certificate_recharge"
                    android:text="兑换"
                    android:textColor="@color/app_red"
                    android:textSize="17sp" />


            </RelativeLayout>

            <View style="@style/exchange_divider_fine_line_style"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activate_rule_sign"
                    android:layout_width="3dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/app_red" />

                <TextView
                    android:id="@+id/tv_activate_rule_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="激活规则："
                    android:textColor="#222"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="10dp"
                    android:text="一、激活需扣除等额的UU；\n二、每日可激活1次；\n三、每周可激活券额上限为："
                    android:textColor="#222"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="10dp"
                    android:text="1.普通注册用户周激活上限为100\n2.普通注册用户升级为会员，周激活上限为200\n3.持有康养证用户，升级为会员，周激活上限为300"
                    android:textColor="#222"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
