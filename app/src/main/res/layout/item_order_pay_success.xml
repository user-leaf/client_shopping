<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/order_pay_success_item_iv_image"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        >

        <TextView
            android:id="@+id/order_pay_success_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品标题"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/order_pay_success_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_pay_success_item_tv_title"
            android:text="¥"
            android:textColor="@color/app_red"
            />

        <TextView
            android:id="@+id/order_pay_success_item_tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/order_pay_success_item_tv_price"
            android:layout_toRightOf="@id/order_pay_success_item_tv_price"
            android:text="+积分"
            />
    </RelativeLayout>
</LinearLayout>