<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bjaiyouyou.thismall.activity.SettingsActivity">

    <com.bjaiyouyou.thismall.widget.IUUTitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iuuTitleBarLeftImage="@mipmap/nav_back_white"
        app:iuuTitleBarTitle="设置"
        >

    </com.bjaiyouyou.thismall.widget.IUUTitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/settings_share"
            style="@style/settings_entry_bar_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享给朋友"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/list_edit"
                />

        </RelativeLayout>

        <View
            style="@style/entry_divider_fine_line_style"/>

        <RelativeLayout
            android:id="@+id/settings_rl_cache"
            style="@style/settings_entry_bar_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除本地缓存"
                />

            <TextView
                android:id="@+id/settings_tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            style="@style/entry_divider_fine_line_style"
            />

        <View
            style="@style/entry_divider_fine_line_style"
            android:layout_marginTop="3.5dp"
            />

        <RelativeLayout
            android:id="@+id/settings_update"
            style="@style/settings_entry_bar_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查更新"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/list_edit"
                />

        </RelativeLayout>

        <View
            style="@style/entry_divider_fine_line_style"
            />
    </LinearLayout>

    <Button
        android:id="@+id/settings_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_basic"
        android:gravity="center"
        android:text="退出账号"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_large"
        />
</LinearLayout>
