<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_top_barLarge"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_orderpay_img"
            android:layout_width="@dimen/width_top_barLarge"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/list_image_loading"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_orderpay_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="物品名称"
                android:textColor="#6b6b6b"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tv_orderpay_dimension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="规格"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_orderpay_singleMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥35+10积分"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_medium"/>

            <TextView
                android:id="@+id/tv_orderpay_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="个数"
                android:textColor="#cdcdcd"
                android:textSize="@dimen/text_size_tiny"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
