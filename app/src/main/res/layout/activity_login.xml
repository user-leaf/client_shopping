<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shop.imake.activity.LoginActivity">

    <shop.imake.widget.IUUTitleBar
        android:id="@+id/login_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iuuTitleBarLeftImage="@mipmap/nav_back_white"
        app:iuuTitleBarTitle="登录"
        >

    </shop.imake.widget.IUUTitleBar>

    <View
        style="@style/entry_divider_fine_line_style"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        >

        <!--<com.aiyouyou.thismall.widget.ClearEditText-->
        <!--android:id="@+id/login_et_tel"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="#ffffff"-->
        <!--android:hint="手机号"-->
        <!--android:inputType="phone"-->
        <!--android:singleLine="true"-->
        <!--android:textSize="@dimen/text_size_small"-->
        <!--/>-->

        <EditText
            android:id="@+id/login_et_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:hint="手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/delete_black"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/login_iv_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/delete_black"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <View
        style="@style/entry_divider_fine_line_style"
        />

    <View
        style="@style/entry_divider_fine_line_style"
        android:layout_marginTop="3.5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        >

        <Button
            android:id="@+id/login_btn_get_veri_code"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_login_btn_bg"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/login_et_veri_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/login_btn_get_veri_code"
            android:background="#ffffff"
            android:hint="填写短信验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/text_size_small"
            />
    </RelativeLayout>

    <View
        style="@style/entry_divider_fine_line_style"
        />

    <LinearLayout
        android:id="@+id/login_ll_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/list_note"
            />

        <TextView
            android:id="@+id/login_tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textColor="@color/app_red"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_long_btn_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/login_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="35dp"
        android:paddingRight="10dp"
        android:text="去注册>"
        android:textColor="@color/app_basic"
        android:textSize="17sp"
        />

</LinearLayout>
