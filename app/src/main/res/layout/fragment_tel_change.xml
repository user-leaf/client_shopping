<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/app_common_bg"
             tools:context="com.bjaiyouyou.thismall.fragment.TelChangeFragment">


    <View
        style="@style/entry_divider_bold_line_style"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="更改手机号需要短信确认，验证码已发送至手机："
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/tel_change_tel_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13100000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tel_change_tel_now"
            android:text="，请按提示操作。"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <Button
            android:id="@+id/tel_change_btn_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            />

        <EditText
            android:id="@+id/tel_change_et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/tel_change_btn_get_code"
            android:hint="填写短信验证码"
            android:textSize="@dimen/text_size_small"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="验证码输入错误"
            android:textColor="#e10c28"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tel_change_tv_lose_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="手机号丢失?"
            android:textColor="#e10c28"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/tel_change_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="下一步"
        android:enabled="false"
        />

</LinearLayout>
