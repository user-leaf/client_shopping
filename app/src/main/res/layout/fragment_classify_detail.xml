<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.bjaiyouyou.thismall.fragment.ClassifyDetailFragment">

    <com.yyydjk.library.DropDownMenu
        android:id="@+id/classify_dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dddividerColor="@android:color/transparent"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        app:ddmenuSelectedIcon="@mipmap/nav_drop_up"
        app:ddmenuTextSize="14sp"
        app:ddmenuUnselectedIcon="@mipmap/nav_drop_down"
        app:ddtextSelectedColor="@color/app_red"
        app:ddtextUnselectedColor="@color/drop_down_unselected"
        app:ddunderlineColor="@color/gray"
        />

</LinearLayout>
