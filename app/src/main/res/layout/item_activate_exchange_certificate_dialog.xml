<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >
    <!--头部-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        >

        <TextView
            android:id="@+id/tv_activate_exchange_certificate_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="取消"
            android:textColor="#222"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="激活兑换券"
            android:textColor="#222"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <View
        style="@style/entry_divider_bold_line_style"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.5dp"
                android:layout_marginRight="28.5dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:text="激活券额"
                    android:textColor="#222"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/et_recharge_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint=""
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#222"
                    android:textColorHint="#bbb"
                    android:textCursorDrawable="@drawable/shape_exchange_edittext_cursor"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    />

                <View
                    style="@style/exchange_orange_divider_fine_line_style"
                    android:layout_marginTop="6dp"></View>
                <TextView
                    android:id="@+id/tv_not_activate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="未激活券额：，本周已激活的金额"
                    android:textColor="#222"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_activate_limit_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6dp"
                        android:text="周激活上限为"
                        android:textColor="#222"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_activate_set_all_can"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.5dp"
                        android:text="激活剩余"
                        android:textColor="#0871f1"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_activate_commit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_long_btn_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="激活"
                android:textColor="@color/app_btn_text_light_red"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.5dp"
                android:layout_marginRight="28.5dp"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="激活需要扣除等值的UU"
                    android:textColor="#222"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28.5dp"
                android:layout_marginRight="28.5dp"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UU余额："
                    android:textColor="#222"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tv_activate_uu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/app_red"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_activate_uu_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="充值UU"
                    android:textColor="#0871f1"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>