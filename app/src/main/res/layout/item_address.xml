<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            />
        <TextView
            android:id="@+id/address_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_item_tv1"
            />
        <TextView
            android:id="@+id/address_item_tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="131"
            />
        <TextView
            android:id="@+id/address_item_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:layout_below="@id/address_item_tv1"
            />

        <TextView
            android:id="@+id/address_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/address_item_tv2"
            android:layout_toRightOf="@id/address_item_tv2"
            android:text="北京市"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/address_item_isdefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设为默认地址"
            />
        <TextView
            android:id="@+id/address_item_tv_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/address_item_tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>