<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/classify_recyclerview_item_iv_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/classify_recyclerview_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="对待生命你不妨大胆冒险一点，因为好歹你要失去它，何必总陷于一片泥土。何必总陷于一片泥土。"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_tiny"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:id="@+id/classify_recyclerview_item_tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_sort_list_item_tag"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="精选"
            android:textColor="@color/app_red"
            android:textSize="@dimen/text_size_micro"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <TextView
            android:id="@+id/classify_recyclerview_item_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="对待生命你不妨大胆冒险一点，因为好歹你要失去它，何必总陷于一片泥土。"
            android:textColor="@color/app_gray_999999"
            android:textSize="@dimen/text_size_micro"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/classify_recyclerview_item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:minWidth="36dp"
                android:text="$100"
                android:textColor="@color/app_red"
                android:textSize="@dimen/text_size_medium"
                />

            <TextView
                android:id="@+id/classify_recyclerview_item_tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0积分"
                android:textColor="@color/app_gray_222222"
                android:textSize="@dimen/text_size_tiny"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="@color/app_gray_dddddd"
            />

    </LinearLayout>
</LinearLayout>
